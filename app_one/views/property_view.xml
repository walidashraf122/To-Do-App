<odoo>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="header_custom">
                <field name="name"/>
                <field name="state"/>
                <field name="postcode"/>
                <field name="owner_id"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="garden"/>
                <field name="facades"/>
                <field name="garden_area"/>
                <field name="bedrooms" optional="1"/>
                <field name="garage" optional="1"/>
            </tree>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button type="object" name="action_draft" class="btn-primary" string="Set To Draft"
                        invisible="state == 'draft'"/>
                        <button type="object" name="action_pending" class="btn-secondary" string="Pending"
                        invisible="state !='draft'"/>
                        <button type="object" name="action_sold" class="btn-success" string="Sold"
                        invisible="state !='pending'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General Info.">
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="expected_price"/>
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                            <field name="diff"/>
                            <field name="postcode"/>
                            <field name="garden"/>
                            <field name="facades"/>
                        </group>
                        <group string="Additional Info.">
                            <field name="owner_id"/>
                            <field name="owner_address"/>
                            <field name="owner_phone"/>
                            <field name="garden_area"/>
                            <field name="bedrooms"/>
                            <field name="garage"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <filter name="is_garden" string="With Garden" domain="[('garden','=','True')]"/>
                <filter name="is_garage" string="With Garage" domain="[('garage','=','True')]"/>
                <filter name="group_garden" string="Garden" context="{'group_by':'garden'}"/>
            </search>
        </field>
    </record>
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
    </record>
<menuitem
id="property_menu_item"
name="properties"
parent="properties_menu"
action="property_action"
/>
</odoo>