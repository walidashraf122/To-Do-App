<odoo>
    <record id="partner_view_tree" model="ir.ui.view">
        <field name="name">partner tree</field>
        <field name="model">partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="to_do_ids"/>
            </tree>
        </field>
    </record>

    <record id="partner_view_form" model="ir.ui.view">
        <field name="name">partner form</field>
        <field name="model">partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="to_do_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="partner_action" model="ir.actions.act_window">
        <field name="name">Partner</field>
        <field name="res_model">partner</field>
    </record>
<menuitem
id="partner_menu_item"
name="Partners"
parent="partner_menu"
action="partner_action"
/>
</odoo>