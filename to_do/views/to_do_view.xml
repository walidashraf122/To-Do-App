<odoo>
    <record id="todo_task_view_tree" model="ir.ui.view">
        <field name="name">To Do</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree class="header_custom">
                <field name="task_name"/>
                <field name="assign_to"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="todo_task_view_form" model="ir.ui.view">
        <field name="name">To Do</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button type="object" name="action_new" class="btn-primary" string="New"/>
                        <button type="object" name="action_in_progress" class="btn-secondary" string="In Progress"/>
                        <button type="object" name="action_completed" class="btn-success" string="Completed"/>
                    </header>
                    <div class="oe_title">
                        <label for="task_name"/>
                        <h1>
                            <field name="task_name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="assign_to"/>
                        <field name="description"/>
                        <field name="due_date"/>
                        <field name="status" widget="radio"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="todo_task_view_search" model="ir.ui.view">
        <field name="name">to do search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name"/>
                <field name="assign_to"/>
                <filter name="status" string="Status" domain="[('status','=','True')]"/>
                <filter name="group_assign_to" string="Assign To" context="{'group_by':'assign_to'}"/>
                <filter name="group_status" string="Status" context="{'group_by':'status'}"/>
                <filter name="group_due_date" string="Due Date" context="{'group_by':'due_date'}"/>
            </search>
        </field>
    </record>
    <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">To Do</field>
        <field name="res_model">todo.task</field>
    </record>
    <menuitem
            id="all_tasks_menu_item"
            name="All Tasks"
            parent="all_tasks_menu"
            action="todo_task_action"
    />
</odoo>